{
  "name": "WhereInTheWorld",
  "scripts": {
    "lint": "tslint --project tsconfig.json",
    "build": "tsc",
    "serve": "yarn run build && firebase serve --only functions",
    "shell": "yarn run build && firebase functions:shell",
    "start": "yarn run shell",
    "deploy": "firebase login && firebase deploy --only functions",
    "test": "yarn jest --no-cache",
    "valid": "yarn run lint && yarn run build && yarn run test"
  },
  "main": "lib/index.js",
  "dependencies": {
    "actions-on-google": "^2.6.0",
    "countries-list": "^2.4.2",
    "country-data": "^0.0.31",
    "firebase-admin": "^8.0.0",
    "firebase-functions": "^3.3.0",
    "firebase-tools": "^7.11.0"
  },
  "devDependencies": {
    "@firebase/app-types": "^0.5.0",
    "@types/country-data": "^0.0.0",
    "@types/jest": "^23.3.12",
    "jest": "^23.6.0",
    "prettier": "^1.15.3",
    "ts-jest": "^23.10.5",
    "tslint": "~5.8.0",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.7.4"
  },
  "private": true,
  "engines": {
    "node": "10"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js)"
    ]
  }
}
